{
  "name": "typescript-node-jest-starter-template",
  "version": "1.0.0",
  "description": "A template for starting a typescript node project.",
  "main": "build/index.js",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "start": "npm run build && node build/index.js",
